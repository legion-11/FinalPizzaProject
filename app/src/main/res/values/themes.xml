<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinallPizzaProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dark_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton.Center">
        <item name="android:background">@drawable/radio_button_background_center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.CheckBox.Center">
        <item name="android:background">@drawable/check_box_background_center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton.Left">
        <item name="android:background">@drawable/radio_button_background_left</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton.Right">
        <item name="android:background">@drawable/radio_button_background_right</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_round</item>
        <item name="android:textColor">#000000</item>
    </style>



    <style name="InputText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/inputText</item>
    </style>
</resources>